# Synology Reverse Proxy Manager - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Synology NAS Configuration
# =============================================================================

# Your Synology NAS URL (include protocol and port)
SYNOLOGY_NAS_URL=http://YOUR_NAS_IP:5000

# DSM username with admin privileges
SYNOLOGY_USERNAME=your_username

# DSM password
SYNOLOGY_PASSWORD=your_password

# =============================================================================
# OPTIONAL: Synology NAS Settings
# =============================================================================

# OTP code for 2FA (only needed for first-time login)
# Recommended: Use the /auth/first-login API endpoint instead
# SYNOLOGY_OTP_CODE=123456

# Device identifier for trusted device authentication
# SYNOLOGY_DEVICE_NAME=SynoReverseProxy

# Session expiry in seconds (default: 518400 = 6 days)
# SYNOLOGY_SESSION_EXPIRY_SECS=518400

# SSL certificate verification (default: true)
# Set to false only if using self-signed certificates
# SYNOLOGY_SSL_VERIFY=true

# =============================================================================
# OPTIONAL: Web UI Authentication
# =============================================================================

# Web UI Authentication
# If these are left blank or unset, you will be prompted to create an admin account on first launch.
# APP_USERNAME=
# APP_PASSWORD=

# Session secret key (auto-generated if not provided)
# APP_SESSION_SECRET_KEY=

# Web session expiry in seconds (default: 3600 = 1 hour)
# APP_SESSION_EXPIRY_SECS=3600

# Remember me expiry in seconds (default: 2592000 = 30 days)
# APP_REMEMBER_ME_EXPIRY_SECS=2592000

# =============================================================================
# OPTIONAL: Security Settings
# =============================================================================

# Enable HTTPS secure cookies (set to true when using HTTPS)
# APP_USE_HTTPS=false

# Rate limiting for login attempts
# APP_RATE_LIMIT_ENABLED=true
# APP_RATE_LIMIT_MAX_ATTEMPTS=5
# APP_RATE_LIMIT_WINDOW=300

# =============================================================================
# OPTIONAL: Port Configuration (Docker only)
# =============================================================================

# Backend API port
# BACKEND_PORT=18888

# Frontend web port
# FRONTEND_PORT=8889

# =============================================================================
# OPTIONAL: User/Group IDs (Docker only)
# =============================================================================

# Set PUID and PGID to match your host user for proper file ownership
# Run 'id' on your host to find your UID and GID
# If not set, container runs as root (works but less secure)
# PUID=1000
# PGID=1000
